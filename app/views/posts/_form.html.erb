<%= form_for @post do |f| %>
  <% if @post.errors.any? %>
    <div id="errors">
      <h2><%= pluralize(@post.errors.count, "error") %> prevented this post from saving:</h2>
      <ul>
        <% @post.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <%= f.label :title %><br>
  <%= f.text_field :title, autofocus: 'autofocus' %><br>
  <br>
  <%= f.label :body %><br>
  <%= f.text_area(:body, class: 'bg-code') %><br>
  <%= f.select :categories, [ 'The Void', 'HTML + CSS', 'Javascript', 'Ruby' ], :prompt => 'Select One' %><br />
  <br>
  <%= f.submit %>
<% end %>
